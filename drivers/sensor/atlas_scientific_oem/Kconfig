menuconfig ATLAS_SCIENTIFIC_OEM
	bool "ATLAS_SCIENTIFIC_OEM Capacitance-to-Digital Converter"
	default y
	depends on DT_HAS_ATLAS_OEM_ENABLED
	depends on NEWLIB_LIBC
	select I2C
	help
	  Enable driver for ATLAS_SCIENTIFIC_OEM Capacitance-to-Digital Converter.

if ATLAS_SCIENTIFIC_OEM

choice
	prompt "Trigger mode"
	default ATLAS_SCIENTIFIC_OEM_TRIGGER_NONE
	help
	  Specify the type of triggering used by the driver.

config ATLAS_SCIENTIFIC_OEM_TRIGGER_NONE
	bool "No trigger"

config ATLAS_SCIENTIFIC_OEM_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	depends on GPIO
	select ATLAS_SCIENTIFIC_OEM_TRIGGER

config ATLAS_SCIENTIFIC_OEM_TRIGGER_OWN_THREAD
	bool "Use own thread"
	depends on GPIO
	select ATLAS_SCIENTIFIC_OEM_TRIGGER

endchoice

config ATLAS_SCIENTIFIC_OEM_TRIGGER
	bool

config ATLAS_SCIENTIFIC_OEM_THREAD_PRIORITY
	int "Thread priority"
	depends on ATLAS_SCIENTIFIC_OEM_TRIGGER_OWN_THREAD && ATLAS_SCIENTIFIC_OEM_TRIGGER
	default 10
	help
	  Priority of thread used by the driver to handle interrupts.

config ATLAS_SCIENTIFIC_OEM_THREAD_STACK_SIZE
	int "Thread stack size"
	depends on ATLAS_SCIENTIFIC_OEM_TRIGGER_OWN_THREAD && ATLAS_SCIENTIFIC_OEM_TRIGGER
	default 1024
	help
	  Stack size of thread used by the driver to handle interrupts.

endif # ATLAS_SCIENTIFIC_OEM
